# Environment Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Settings
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Postgres for metadata
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vip_memory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Provider
OPENAI_API_KEY=xxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=http://ai-gateway-azure-yfb.api.vip.com/v1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qwen (通义千问) - 阿里云百炼
# 使用 DashScope SDK，环境变量名为 DASHSCOPE_API_KEY
DASHSCOPE_API_KEY=sk-your-dashscope-api-key-here
QWEN_MODEL=qwen-plus
QWEN_SMALL_MODEL=qwen-turbo
QWEN_EMBEDDING_MODEL=text-embedding-v3

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Graphiti Settings
GRAPHITI_SEMAPHORE_LIMIT=10

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# OpenTelemetry Settings
SERVICE_NAME=vip-memory
ENVIRONMENT=development
ENABLE_TELEMETRY=true
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317  # Jaeger 或其他 OTLP 收集器

# 禁用第三方遥测（已在代码中自动设置）
# POSTHOG_DISABLED=1
# GRAPHITI_TELEMETRY_DISABLED=1
